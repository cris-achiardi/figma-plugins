---
export const prerender = false;

import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import VersionBadge from '../../../components/dashboard/VersionBadge.astro';
import VersionHistory from '../../../components/dashboard/VersionHistory.tsx';
import { getVersionHistorySlim, getBatchAuditLogs, getLatestPublished } from '../../../lib/data';

const { key } = Astro.params;
const projectId = Astro.url.searchParams.get('project') || '';

if (!key || !projectId) {
  return Astro.redirect('/dashboard');
}

const decodedKey = decodeURIComponent(key);
const [history, latest] = await Promise.all([
  getVersionHistorySlim(decodedKey, projectId),
  getLatestPublished(decodedKey, projectId),
]);

const auditLogs = await getBatchAuditLogs(history.map(v => v.id));

const componentName = history[0]?.component_name || decodedKey;
const currentVersion = latest?.version || 'No published version';
const currentStatus = latest?.status || 'draft';
const thumbnailUrl = latest?.thumbnail_url || history[0]?.thumbnail_url;
---

<DashboardLayout title={`${componentName} â€” Component Changelog`}>
  <a href={`/dashboard/components?project=${projectId}`} class="back-link">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    Back to components
  </a>

  <div class="component-header">
    <h1>{componentName}</h1>
    <VersionBadge status={currentStatus} version={currentVersion} />
  </div>

  {thumbnailUrl && (
    <div class="thumbnail">
      <img src={thumbnailUrl} alt={`${componentName} thumbnail`} />
    </div>
  )}

  <section class="history-section">
    <h2>Version History</h2>
    <VersionHistory client:load versions={history} auditLogs={auditLogs} />
  </section>
</DashboardLayout>

<style>
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: var(--text-muted);
    font-size: 14px;
    margin-bottom: 24px;
    transition: color 0.15s;
  }

  .back-link:hover {
    color: var(--text-primary);
    text-decoration: none;
  }

  .component-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    flex-wrap: wrap;
    gap: 12px;
  }

  h1 {
    font-size: 24px;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .thumbnail {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: 24px;
    margin-bottom: 32px;
    text-align: center;
  }

  .thumbnail img {
    max-width: 100%;
    max-height: 200px;
    border-radius: var(--radius-sm);
  }

  .history-section h2 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 12px;
  }
</style>
