---
export const prerender = false;

import DashboardLayout from '../../layouts/DashboardLayout.astro';
import ActivityList from '../../components/dashboard/ActivityList.tsx';
import { getProjects, getRecentActivity } from '../../lib/metrics';

const WEAVE_ID = '6137fe77-c965-4119-8578-e1d796033b5e';
const projects = await getProjects();
const projectId = Astro.url.searchParams.get('project') || projects.find(p => p.id === WEAVE_ID)?.id || projects[0]?.id || '';

let activity: Awaited<ReturnType<typeof getRecentActivity>> = [];

if (projectId) {
  activity = await getRecentActivity(projectId, 50);
}
---

<DashboardLayout title="Activity â€” Component Changelog">
  <h1>Recent Activity</h1>

  {!projectId ? (
    <p class="empty">No projects found.</p>
  ) : (
    <ActivityList client:load entries={activity} />
  )}
</DashboardLayout>

<style>
  h1 {
    font-size: 24px;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 32px;
  }

  .activity-section {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
  }

  .empty {
    color: var(--text-muted);
    text-align: center;
    padding: 64px 16px;
  }
</style>
