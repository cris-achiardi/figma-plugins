---
interface Props {
  status: string;
  version?: string;
}

const { status, version } = Astro.props;

const statusConfig: Record<string, { label: string; color: string; bg: string }> = {
  published: { label: 'published', color: '#4ade80', bg: 'rgba(74, 222, 128, 0.1)' },
  draft: { label: 'draft', color: '#fbbf24', bg: 'rgba(251, 191, 36, 0.1)' },
  in_review: { label: 'in review', color: '#60a5fa', bg: 'rgba(96, 165, 250, 0.1)' },
  approved: { label: 'approved', color: '#4ade80', bg: 'rgba(74, 222, 128, 0.1)' },
  deprecated: { label: 'deprecated', color: '#78716c', bg: 'rgba(120, 113, 108, 0.1)' },
};

const config = statusConfig[status] || statusConfig.draft;
---

<span
  class="badge"
  style={`color: ${config.color}; background: ${config.bg};`}
>
  {version && <span class="version">{version}</span>}
  {config.label}
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    font-family: var(--font-sans);
    padding: 2px 10px;
    border-radius: 9999px;
    font-weight: 500;
    white-space: nowrap;
  }

  .version {
    font-family: var(--font-mono);
    font-weight: 600;
  }
</style>
